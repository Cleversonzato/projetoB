<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h5>Editar Informações</h5>
    <br>
    <form>
      <div>{{erro}}</div>
      <div class="form-group">
        <label for="Nome">Nome:</label>
        {{input id="nome" value=model.nome class="form-control"}}
      </div>
      <div class="form-group">
        <label for="Sexo">Sexo</label>
        {{input id="sexo" value=model.sexo class="form-control"}}
      </div>
      <div class="form-group">
        <label for="dtNascimento">Data de Nascimento</label>
        {{input id="dtNascimento" type="date" value=model.dtNascimento class="form-control"}}
      </div>
      <div class="form-group">
        <label for="rg">RG</label>
        {{input id="rg" value=model.rg class="form-control"}}
        Data de emissão:
        {{input id="rgData" value=model.rgData type="date" class="form-control"}}
        Orgão emissor:
        {{input id="rgEmissor" value=model.rgEmissor class="form-control"}}
      </div>
      <div class="form-group">
        <label for="pisPasep">Pis/Pasep</label>
        {{input id="pisPasep" value=model.pisPasep class="form-control"}}
      </div>

      <div>
        <button type="submit" class="btn btn-primary" {{action "editar"}}>Salvar</button>
      </div>
    </form>
  </div>
  <div class="col-sm-3"></div>
</div>
