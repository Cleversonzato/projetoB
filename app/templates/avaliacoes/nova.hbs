<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h5>Nova Avaliação</h5>
    <br>
    <form>
      <div>{{erro}}</div>
      <div class="form-group">
        <label for="titulo">Título do Avaliação</label>
        {{input id="titulo" value=model.titulo class="form-control" required=true}}
      </div>
      <div class="form-group">
        <label for="titulo">Data de inicio</label>
        {{input type="date" id="dtInicio" value=model.dtInicio class="form-control"}}
      </div>
      <div class="form-group">
        <label for="titulo">Descrição</label>
        {{input id="descricao" value=model.descricao class="form-control"}}
      </div>

      <div>
        <button type="submit" class="btn btn-primary" {{action "salvar"}}>Salvar</button>
      </div>
    </form>
  </div>
  <div class="col-sm-3"></div>
</div>
